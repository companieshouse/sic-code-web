{
  "name": "sic-code-web",
  "version": "1.0.0",
  "description": "Sic Code Web Application to allow users to search for SIC Codes from the economic activities of their business",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development ts-node ./src/server.ts",
    "dev": "NODE_ENV=development nodemon",
    "build": "NODE_ENV=production tsc",
    "postbuild": "copyfiles -f -V src/views/* dist/app/views",
    "lint": "eslint '{src,test}/**/*'",
    "lint:fix": "eslint '{src,test}/**/*' --fix",
    "test": "NODE_ENV=test jest --runInBand --coverage",
    "analyse-code": "sonar-scanner"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/companieshouse/sic-code-web.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/companieshouse/sic-code-web/issues"
  },
  "homepage": "https://github.com/companieshouse/sic-code-web#readme",
  "dependencies": {
    "@companieshouse/structured-logging-node": "^1.0.4",
    "axios": "^0.26.1",
    "express": "^4.17.3",
    "govuk-frontend": "^4.0.1",
    "http-status-codes": "^2.2.0",
    "nunjucks": "^3.2.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/nunjucks": "^3.2.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^5.1.0",
    "jest": "^27.5.1",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.15",
    "sonarqube-scanner": "^2.8.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts,njk",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/server.ts"
  }
}
